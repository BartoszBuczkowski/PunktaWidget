{
   "compilerOptions": {
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "target": "ES5",
      "module": "ESNext",
      "declarationMap": true,
      "declaration": true,
      "declarationDir": "dist",
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
   },
   "exclude": ["dist", "node_modules"]
}
